<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/field_name"
        android:ems="10"
        android:id="@+id/Name"
        android:layout_marginTop="@dimen/margin50"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/dataBorn"
        android:layout_toStartOf="@+id/dataBorn"
        android:layout_marginBottom="@dimen/margin40"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/field_second_name"
        android:ems="10"
        android:id="@+id/Famil"
        android:layout_alignTop="@+id/Name"
        android:layout_toRightOf="@+id/dataBorn"
        android:layout_toEndOf="@+id/dataBorn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dataBorn"
        android:clickable="true"
        android:onClick="onclick"
        android:text="@string/click_button_date"
        android:textSize="@dimen/sizeText16"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/Name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin30"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_new_activity"
        android:id="@+id/buttonNextActivity"
        android:layout_below="@+id/dataBorn"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>