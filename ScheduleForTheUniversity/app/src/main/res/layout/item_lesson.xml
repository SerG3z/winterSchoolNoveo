<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_lesson"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/item_type_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type_lesson"
        android:layout_toRightOf="@id/item_time"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/item_name_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_lesson"
        android:layout_toRightOf="@id/item_time"
        android:layout_below="@id/item_type_lesson"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/item_fio_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fio_teacher"
        android:layout_toRightOf="@id/item_time"
        android:layout_below="@id/item_name_lesson"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/item_number_auditory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/number_auditory"
        android:layout_margin="5dp"
        />


</RelativeLayout>